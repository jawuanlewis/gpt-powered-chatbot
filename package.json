{
  "name": "chatbot",
  "version": "1.0.0",
  "description": "Chatbot powered by ChatGPT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "dev:run": "ts-node --esm server/index.ts",
    "type-check": "tsc --noEmit",
    "client": "cd client && npm run dev",
    "build:client": "cd client && npm install && npm run build",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jawuan Lewis",
  "license": "MIT",
  "dependencies": {
    "colors": "^1.4.0",
    "dotenv": "^16.4.7",
    "openai": "^4.84.0",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/readline-sync": "^1.4.8",
    "prettier": "^3.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "es5"
  }
}
